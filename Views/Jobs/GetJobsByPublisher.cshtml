@model IEnumerable<Job_offers.Models.JobsViewModel>

@{
    ViewData["Title"] = "GetJobsByPublisher";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>المتقدمين للوظائف</h1>


@foreach(var gr in Model){
    <h3>@gr.JobTitle</h3>
    <table class="table table-bordered table-hover">
        <thead>
        
            <tr>
                <th>
                    أسم المتقدم للوظيفة
                </th>

                <th>
                    نص الرسالة
                </th>

                <th>
                    السيرة الذاتية
                </th>

                <th>
                    تاريخ الارسال
                </th>
            </tr>
        </thead>

        <tbody>

                @foreach(var item in gr.Items)
                {
                    <tr>
                        <td>@item.User.Name</td>
                        <td>@item.Message</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.CVFileName))
                            {
                                <a href="~/uploads/@item.CVFileName">Download CV</a>
                            }
                            else
                            {
                                <span>No CV uploaded</span>
                            }
                        </td>
                        <td>
                            @item.ApplyDate
                        </td>
 
                    </tr>
                }

        
        </tbody>

    </table>

}
