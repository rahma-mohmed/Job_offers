@model Job_offers.Models.ApplyForJob

@{
    ViewData["Title"] = "Apply";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>التقدم للوظيفة</h1>

<div>
    @if (ViewBag.Result != null)
    {
        <h3>@ViewBag.Result</h3>
    }
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Apply" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVFile" class="control-label"></label>
                <input asp-for="CVFile" type="file" class="form-control-file" />
                <span asp-validation-for="CVFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تأكيد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
