@{
    ViewBag.Title = "اضافة وظيفه";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

@model Job


<h3>اضافة وظيفه</h3>
<form action="Add" class="form" method="post" style="padding-right:50px" enctype="multipart/form-data">
    <div class="alert alert-danger" id="error-div" style="display:none">
        <span id="view-err">

        </span>
    </div>
    <div class="form-group">
        <label for="JobTitle">  أسم الوظفيه:</label>
        <input type="text" name="JobTitle" id="JobTitle" class="form-control" value="@Model.JobTitle" />
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="JobContent">  وصف الوظيفه:</label>
        <input type="text" name="JobContent" id="JobContent" class="form-control" value="@Model.JobContent" />
        <span asp-validation-for="JobContent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobImage"></label>
        <input asp-for="JobImage" type="file" class="form-control" />
        <span asp-validation-for="JobImage" class="text-danger"></span>
        @* <input type="text" name="JobImage" id="JobImage" class="form-control" value="@Model.JobImage" /> *@

    </div>

    <div>
        <label for="CategoryId">  تصنيف الوظيفه:</label>
        <select name="CategoryId" id="CategoryId" class="form-control">
            @foreach (var item in ViewBag.Categories)
            {
                if (item.Id == Model.CategoryId)
                {
                    <option value="@item.Id" selected>
                        @item.CategoryName
                    </option>
                }
                else
                {
                    <option value="@item.Id">
                        @item.CategoryName
                    </option>
                }

            }
            <span asp-validation-for="CategoryId" class="text-danger"></span>

        </select>
    </div>

    <br />
    <input type="submit" value="اضافه" class="btn btn-success" style="background-color:#ec4899;" id="save" />
</form>

