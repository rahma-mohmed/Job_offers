@{
    ViewBag.Title = "الوظيفه";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

@model ApplyForJob

<h2>هل أنت متأكد من حذف هذه الوظيفة ؟</h2>

<div>
    <h4>تفاصيل الوظيفه  </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            نوع الوظيفه :
        </dt>
        <dd>
            @Model.job.JobTitle
        </dd>
        <dt>رسالتك : </dt>
        <dd>
            @Model.Message
        </dd>
        <dt>تاريخ التقديم : </dt>
        <dd>
            @Model.ApplyDate
        </dd>
    </dl>

    <button class="btn btn-success" style="background-color:#ec4899;"><a asp-controller="Jobs" asp-action="DeleteForJob" asp-route-id="@Model.Id" style="color:white; text-decoration:none"> تأكيد الحذف </a></button>

</div>
<br />
@Html.ActionLink("العودة الى القائمه", "GetJobsByUser", "Jobs")

