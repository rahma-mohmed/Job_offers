@{
}

@{
    ViewBag.Title = "الوظيفه";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

@model Job

<h2>الوظيفه</h2>
<div>

    <h4>تفاصيل الوظيفه  </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            أسم الوظفيه:
        </dt>
        <dd>
            @Model.JobTitle
        </dd>
        <br />
        <dt>وصف الوظيفه: </dt>
        <dd>
            @Model.JobContent
        </dd>
        <br />

        <dt>صورة الوظيفه: </dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.JobImage))
            {

                <img src="~/@Model.JobImage" class="thumbnail" style="width:128px; height:128px;" />
            }
            else
            {
                <span>لا توجد صورة متاحة</span>
            }
        </dd>
        <br />

        <dt>نوع الوظيفه: </dt>
        
            @foreach (var x in @ViewBag.Categories)
            {
                if (x.Id == @Model.CategoryId)
                {
                    <dd>
                        @x.CategoryName
                    </dd>
                }
            }
            <br />
    </dl>
</div>
<p>
    <a asp-controller="Jobs" asp-action="Apply" asp-route-id="@Model.Id" class="btn btn-success"> التقدم الي هذه الوظيفه </a>
    @Html.ActionLink("العودة الى القائمة الرئيسية", "Index", "Jobs")
</p>


