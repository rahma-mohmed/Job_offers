@model Account
<h3>انشاء حساب جديد</h3>
<form action="\Home\Signup\@Model.Id" class=" form" method="post" style="padding-right:50px">
    <div>
        <label for="name">الاسم:</label>
        <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name" />
        <span class="text-danger" asp-validation-for="Name"></span>

    </div>
    <div>
        <label for="Password">كلمه المرور:</label>
        <input type="password" name="Password" id="Password" class="form-control" value="@Model.Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div>
        <label for="RePassword">تاكيد كلمه المرور:</label>
        <input type="password" name="RePassword" id="RePassword" class="form-control" value="@Model.RePassword" />
        <span class="text-danger" asp-validation-for="RePassword"></span>
    </div>

    <div>
        <label for="Email">الايميل:</label>
        <input type="email" name="Email" id="Email" class="form-control" value="@Model.Email" />
        <span class="text-danger" asp-validation-for="Email"></span>

    </div>

    <div>
        <label for="Account_Type">نوع الحساب:</label>
        <select name="Account_Type" id="Account_Type" class="form-control">
            @foreach (var item in ViewBag.Types)
            {
                <option>@item</option>
            }
        </select>
    </div>

    <br />
    <h5 class="text-danger">@ViewBag.Notification</h5>
    <br />

    <br />
    <input type="submit" value="أضافه" class="btn btn-success" style="background-color:#ec4899;" />
</form>
